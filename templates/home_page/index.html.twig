{% extends 'base.html.twig' %} {% block title %}FoxLeague - Welcome!{% endblock
%} {% block stylesheets %}
<!-- Add your custom stylesheets here -->
<link rel="stylesheet" href="{{ asset('styles/homePageController.css') }}" />
{% endblock %} {% block body %}
<div class="container">
    <!-- Section : 5 dernières missions -->
    <section>
        <h2>🗺️ 5 Dernières Missions</h2>
        <div class="card-container">
            {% for mission in missions %}
            <div class="card">
                <div class="card-body">
                    <h3>{{ mission.name }}</h3>
                    <p>{{ mission.description }}</p>
                    <p><strong>Durée :</strong> {{ mission.durer }} jours</p>
                    <p><strong>Status :</strong> {{ mission.status }}</p>
                    <p>
                        <small
                            >Créée le :
                            {{ mission.createDate|date('d/m/Y') }}</small
                        >
                    </p>
                </div>
            </div>
            {% else %}
            <p>Aucune mission disponible pour le moment.</p>
            {% endfor %}
        </div>
    </section>

    <!-- Section : Liste des raretés de pouvoir -->
    <section>
        <h2>🌟 Rareté des Pouvoirs</h2>
        <div class="card-container power-container">
            {% for rarity, powers in groupedPowers %}
            <div class="card">
                <div class="card-body">
                    <h3>
                        {% if rarity == 'legendary' %} Légendaire ⚡ {% elseif
                        rarity == 'epic' %} Épique ✨ {% elseif rarity == 'rare'
                        %} Rare 🌟 {% elseif rarity == 'common' %} Commun 💎 {%
                        endif %}
                    </h3>
                    <ul>
                        {% for power in powers %}
                        <li>{{ power.name }}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            {% endfor %}
        </div>
    </section>

    <section>
        <h2>🏆 Top 3 des Meilleurs Héros</h2>
        <div class="card-container">
            <!-- Carte 1 (Top 1 - Or) -->
            <div class="card top-1">
                <div class="card-header">Héro: Foxy</div>
                <div class="card-body">
                    <h3>Mission la plus célèbre: Sauver la forêt</h3>
                    <p>Rareté des pouvoirs: Légendaire</p>
                </div>
                <div class="card-footer">Top 1 🏅</div>
            </div>

            <!-- Carte 2 (Top 2 - Argent) -->
            <div class="card top-2">
                <div class="card-header">Héro: Shadow</div>
                <div class="card-body">
                    <h3>Mission la plus célèbre: Attraper les méchants</h3>
                    <p>Rareté des pouvoirs: Épique</p>
                </div>
                <div class="card-footer">Top 2 🥈</div>
            </div>

            <!-- Carte 3 (Top 3 - Bronze) -->
            <div class="card top-3">
                <div class="card-header">Héro: Flame</div>
                <div class="card-body">
                    <h3>Mission la plus célèbre: Éteindre les feux</h3>
                    <p>Rareté des pouvoirs: Rare</p>
                </div>
                <div class="card-footer">Top 3 🥉</div>
            </div>
        </div>
    </section>
</div>
{% endblock %}
